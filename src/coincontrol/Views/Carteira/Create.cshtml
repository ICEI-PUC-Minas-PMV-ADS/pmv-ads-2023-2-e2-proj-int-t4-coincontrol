@using coincontrol.Models.Carteira;
@model coincontrol.Models.Carteira.Carteiras

<h1>Criar Carteira</h1>

<h4>Preencha os detalhes da carteira</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SaldoInicial" class="control-label"></label>
                <input asp-for="SaldoInicial" class="form-control" />
                <span asp-validation-for="SaldoInicial" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mes" class="control-label"></label>
                <input asp-for="Mes" class="form-control" />
                <span asp-validation-for="Mes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar Carteira" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Voltar para a lista de carteiras</a>
            </div>
        </form>
    </div>
</div>
