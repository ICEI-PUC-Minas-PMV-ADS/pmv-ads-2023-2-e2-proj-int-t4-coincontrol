@model coincontrol.Models.Usuario.Usuario

@{
    ViewData["PageTitle"] = "Bem-vindo ao CoinControl";
}
<style>
    #breadcrumb {
        display: none;
    }
</style>

<h3 style="font-size: 22px; font-weight: bold; color: #777;">Faça o seu login.</h3>

<div class="row">
    <div class="col-md-7">
        <div class="widget p-5" style="background-color:#212b36">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="mb-3">
                    <ejs-textbox id="Email" placeholder="Email" ejs-for="Email" floatLabelType="Always" ></ejs-textbox>
                    <span asp-validation-for="Email" class="text-danger fs-6"></span>
                </div>
                <div class="mb-3">
                    <ejs-textbox type="password" id="Senha" placeholder="Senha" ejs-for="Senha" floatLabelType="Always"></ejs-textbox>
                    <span asp-validation-for="Senha" class="text-danger fs-6"></span>
                </div>
                <ejs-button id="submit" type="submit" content="Login" cssClass="e-success"></ejs-button> |
                <a class="btn btn-info" asp-action="Create">Novo por aqui? Crie sua conta!</a>
            </form>
        </div>
    </div>

</div>

