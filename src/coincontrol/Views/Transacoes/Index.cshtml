                <a asp-action="Edit" asp-route-id="@item.IdTransacoes">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdTransacoes">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdTransacoes">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
