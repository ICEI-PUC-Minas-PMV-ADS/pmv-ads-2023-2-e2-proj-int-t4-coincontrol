@if(User.Identity.IsAuthenticated)
{
<ejs-sidebar id="sidebar" width="290px" enableDock dockSize="100px"
             target=".dock-target" enableGestures="false">
    <e-content-template>

        <div class="logo-wrapper">
            <div class="app-logo">
                @*<img src="~/logo.png" />*@
            </div>
            <div class="w-100"></div>
            <i id="sidebar-toggler" class="fa-solid"></i>
        </div>

        <div class="profile-wrapper">
               @*<img class="profile-pic" src="~/logo.png" />*@ 
            <div class="titles d-flex flex-column ps-3">
                <span class="mb-0">Olá, @User.Identity.Name!</span>
                <h6 class="text-muted">CoinControl</h6>
            </div>
            <div class="titles d-flex flex-column ps-3">
                <a class="text-muted" asp-action="Logout" asp-controller="Usuarios">Sair</a>
            </div>
        </div>

        <ejs-menu id="menu"
                  items="menuItems"
                  orientation="Vertical"
                  hamburgerMode></ejs-menu>
    </e-content-template>
</ejs-sidebar>

<script>
    document.addEventListener('DOMContentLoaded',function (){
        dockBar = document.getElementById('sidebar').ej2_instances[0];
        document.getElementById('sidebar-toggler').onclick = function () {
            dockBar.toggle();
        };
    });

</script>
}
